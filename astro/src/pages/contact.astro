---
import MainLayout from "@/layouts/MainLayout.astro";
import ContactForm from "@/components/ContactForm/ContactForm.astro";
---

<MainLayout
    title="Contact"
    description="Contact me for guitar lessons, arrangements, compositions, freelance work, or just to say hello."
>
    <div class="layout-grid__centered">
        <ContactForm />
    </div>
</MainLayout>

<style lang="scss">
    @use "@/styles/abstracts";

    .header {
        margin: abstracts.$space-md;
        width: 100%;
        border: abstracts.$border;
        border-radius: abstracts.$border-radius;
        background: abstracts.get-color("lightShades");
        padding: abstracts.$space-md;
        color: abstracts.get-color("darkShades");

        & h1 {
            margin: abstracts.$space-md 0;
            font-weight: bold;
            color: abstracts.get-color("mainBrand");
        }
    }
</style>
