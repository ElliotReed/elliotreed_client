---
import Heading from "@/components/Heading/Heading";

const { article } = Astro.props;
---

<header class="">
    <Heading level={1}>{article.data.title}</Heading>
    {
        article.data.author && (
            <span class="author">
                <em>by </em>
                {article.data.author}
            </span>
        )
    }

    {
        article.data.publishedDate && (
            <span class="published-date">
                <em>{article.data.publishedDate.toDateString()}</em>
            </span>
        )
    }
</header>

<style lang="scss">
    @use "@/styles/abstracts" as *;
    header {
        .author {
            display: block;
            font-weight: $fw-lg;
            em {
                font-weight: $fw-md;
                font-size: $fs-sm-rem;
            }
        }
        .published-date {
            margin-block-start: -$space-sm;
            font-size: $fs-sm-rem;
            color: get-color("darkShades", 500);
        }
    }
</style>
