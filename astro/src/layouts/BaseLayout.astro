---
import "@/styles/index.scss";

const {
	title = "Elliot Reed Music",
	description = "Elliot Reed Music, I arrange, compose, perform and teach music. Guitar, bass, and theory lessons available",
} = Astro.props;
---

<!doctype html>
<html lang="en-US">
	<head>
		<meta name="author" content="Elliot Reed" />
		<meta name="description" content={description} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
